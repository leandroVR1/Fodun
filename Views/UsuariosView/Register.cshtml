                        <label for="PreguntaClave" class="form-label">Pregunta de Seguridad</label>
                        <br>
                        <input type="text" class="form-control" id="PreguntaClave" asp-for="PreguntaClave"
                            placeholder="Ingrese su pregunta de seguridad" />
                        <span asp-validation-for="PreguntaClave" class="text-danger"></span>
                    </div>


                    <div class="mb-3 text-start fw-bold">
                        <label for="RespuestaClave" class="form-label">Respuesta de Seguridad</label>
                        <input type="text" class="form-control" id="RespuestaClave" asp-for="RespuestaClave" placeholder="Ingrese su respuesta de seguridad" />
                        <span asp-validation-for="RespuestaClave" class="text-danger"></span>
                    </div>
